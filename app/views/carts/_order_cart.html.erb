<tr>
  <td class="cart_product">
    <%= link_to order_product.product do %>
      <%= image_tag order_product.product.picture.url %>
    <% end %>
  </td>
  <td class="cart_description">
    <p class="product-name">
      <%= link_to order_product.product do %>
        <%= order_product.product.name %>
      <% end %>
    </p>
  </td>
  <td class="price"><span><%= order_product.product.price %></span></td>
  <td class="qty">
    <%= form_tag cart_path(product_id: order_product.product_id), method: :patch do %>
      <%= number_field_tag :quantity, nil, class: "form-control input-sm",
        min: 1, max: order_product.product.quantity,
        value: order_product.quantity %> <br />
      <%= button_tag type: "submit", class: "btn", name: nil do %>
        <%= content_tag :span, t(".apply") %>
      <% end %>
    <% end %>
  </td>
  <td class="action">
    <%= link_to cart_path(product_id: order_detail.product_id), method: :delete,
      data: {confirm: t(".you_sure")} do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  </td>
</tr>
