<% provide :title, t("shopping_title") %>

  <div class="cart">
    <div class="page-content page-order">
      <div class="page-title">
        <h2><%= t "cart_product" %></h2>
      </div>
      <%= link_to client_orders_path, method: :post,
        data: {confirm: t("alert.submit_order")} do %>
        <span class="glyphicon glyphicon-shopping-cart"><%= t "order.order" %></span>
      <% end %>
      <div class="order-product-content">
        <div class="table-responsive">
          <table class="table table-bordered cart_summary">
            <thead>
              <tr>
                <th class="cart_product"><%= t "product" %></th>
                <th class="cart_name"><%= t "name" %></th>
                <th class="cart_price"><%= t "price" %></th>
                <th class="cart_quantity"><%= t "quantity" %></th>
                <th class="action"><%= t "action" %></th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |key, value| %>
                <tr>
                  <td class="cart_product">
                      <%= image_tag value[:product].picture.url %>
                  </td>
                  <td class="cart_name">
                    <p class="product-name">
                      <%= link_to products_path do %>
                        <%= value[:product].name %>
                      <% end %>
                    </p>
                  </td>
                  <td class="cart_price">
                    <span><%= value[:product].price %></span>
                  </td>
                  <td class="cart_quantity">
                    <span><%= value[:quantity] %></span>
                  </td>
                  <td class="action">
                    <%= link_to client_cart_path(key), method: :delete,
                      data: {confirm: t("admin.users.index.confirm")} do %>
                      <span class="glyphicon glyphicon-trash"></span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="">
        <%= t "carts.total" %>:
        <b><%= number_to_currency(@total) %></b>
      </div>
        <div class="cart_navigation">
          <%= link_to products_path do %>
            <span class="cart-title"><%= t "back" %></span>
          <% end %>
          <a class="checkout-btn" href="#">
            <i class="fa fa-check"></i><%= t "checkout" %>
          </a>
        </div>
      </div>
    </div>
  </div>
