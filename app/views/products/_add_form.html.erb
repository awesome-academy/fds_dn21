<%= form_for(@order_product, url: client_carts_path, method: :post, remote: true) do |f| %>
  <%= f.number_field :quantity, :required => true, :as => t("products.number") %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= f.hidden_field :price, value: @product.price %>
  <%= f.submit t("products.add"), class: "btn btn-primary" %>
<% end %>
